<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:clickable="true">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/posterImage"
        android:contentDescription="@string/posterDefaultImageDesc"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/posterDefaulName"
            android:id="@+id/filmName"
            android:layout_weight="1"
            android:textColor="#1e2ee1"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/posterDefaultReit"
            android:id="@+id/filmReit"
            android:layout_weight="5"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/posterDefaultType"
            android:id="@+id/filmType"
            android:layout_weight="1"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/posterDefaultYear"
            android:id="@+id/filmYear"
            android:layout_weight="5"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>